@page
@model CreditCardPortal.Pages.Account.KycModel
@{
    ViewData["Title"] = "KYC Registration";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">KYC Registration</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Kyc.FullName" class="form-label"></label>
                <input asp-for="Kyc.FullName" class="form-control" />
                <span asp-validation-for="Kyc.FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kyc.Address" class="form-label"></label>
                <input asp-for="Kyc.Address" class="form-control" />
                <span asp-validation-for="Kyc.Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kyc.PhoneNumber" class="form-label"></label>
                <input asp-for="Kyc.PhoneNumber" class="form-control" />
                <span asp-validation-for="Kyc.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kyc.EmploymentStatus" class="form-label"></label>
                <select asp-for="Kyc.EmploymentStatus" class="form-select">
                    <option value="">Select Employment Status</option>
                    <option>Employed</option>
                    <option>Self-Employed</option>
                    <option>Unemployed</option>
                    <option>Student</option>
                </select>
                <span asp-validation-for="Kyc.EmploymentStatus" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kyc.MaritalStatus" class="form-label"></label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Kyc.MaritalStatus" value="Single" />
                        <label class="form-check-label">Single</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Kyc.MaritalStatus" value="Married" />
                        <label class="form-check-label">Married</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Kyc.MaritalStatus" value="Other" />
                        <label class="form-check-label">Other</label>
                    </div>
                </div>
                <span asp-validation-for="Kyc.MaritalStatus" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kyc.DateOfBirth" class="form-label"></label>
                <input asp-for="Kyc.DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="Kyc.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kyc.Gender" class="form-label"></label>
                <select asp-for="Kyc.Gender" class="form-select">
                    <option value="">Select Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Kyc.Gender" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kyc.Nationality" class="form-label"></label>
                <input asp-for="Kyc.Nationality" class="form-control" />
                <span asp-validation-for="Kyc.Nationality" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kyc.AnnualIncome" class="form-label"></label>
                <input asp-for="Kyc.AnnualIncome" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Kyc.AnnualIncome" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit KYC</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

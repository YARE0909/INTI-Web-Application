@page
@model CreditCardPortal.Pages.CreditCards.SelectModel
@{
    ViewData["Title"] = "Select a Credit Card";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-4">Select a Credit Card</h2>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Select Card Type:</label>
                <select asp-for="SelectedCard" class="form-select">
                    <option value="">-- Select a Card --</option>
                    <option value="Standard">Standard Credit Card</option>
                    <option value="Gold">Gold Credit Card</option>
                    <option value="Platinum">Platinum Credit Card</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Apply</button>
        </form>
    </div>
</div>
